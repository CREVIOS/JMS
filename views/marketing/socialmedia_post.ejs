<body style="background:linear-gradient(rgba(47, 23, 15, 0.65), rgba(47, 23, 15, 0.65)), url('assets_2/img/bg.jpg');">
    <h1 class="text-center text-white d-none d-lg-block site-heading"><span class="text-primary site-heading-upper mb-3">PR&ampMARKETING @ YSJ</span><span class="site-heading-lower">SOCIAL MEDIA</span></h1>
    <nav class="navbar navbar-light navbar-expand-lg bg-dark py-lg-4" id="mainNav">
        <div class="container"><a class="navbar-brand text-uppercase d-lg-none text-expanded" href="#">YSJournal</a><button data-toggle="collapse" data-target="#navbarResponsive" class="navbar-toggler" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div
                class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav mx-auto">
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/index">Back to the AMS</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="socialmedia_post">New</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="socialmedia_all_posts"><strong>ALL POSTS</strong></a></li>
                </ul>
        </div>
        </div>
    </nav>
    <form action="/socialmedia_post" method='POST' enctype="multipart/form-data">
        <section class="page-section clearfix">
            <div class="container">
                <div class="intro">
                    <input type="hidden" name=""><img class="img-fluid intro-img mb-3 mb-lg-0 rounded" src="https://drive.google.com/uc?export=view&id=<%=post.imageId%>"></input>
                    <div class="intro-text left-0 text-centerfaded p-5 rounded bg-faded text-center">
                        <input type="hidden" name="id" value="<%=post.id%>">
                        <h2 class="section-heading mb-4" style="align-content: center;">
                            <input placeholder="Twitter? Instagram?" class="section-heading-upper text-center" type="text" name="type" value="<%= post.type %>" style="width:100%; background-color: transparent; border-color: transparent;">
                            <textarea id="title" rows="1" placeholder="Title Here" class="section-heading-lower text-center" type="text" name="title" style="width:100%; background-color: transparent; border-color: transparent; text-transform: uppercase;"><%= post.title %></textarea>
                        </h2>
                        <textarea id="content" placeholder="Write the content of the post here" name="content" class="mb-3" style="width:100%; height: 100%; padding: 0 0 0 0; background-color: transparent; border-color: transparent;"><%= post.content %></textarea>
                        <div class="mx-auto intro-button">
                            <button class="btn btn-primary d-inline-block mx-auto btn-xl">Save</button>
                            <input class="btn btn-primary d-inline-block mx-auto btn-xl" type="file" name="imageId" accept="image/x-png,image/gif,image/jpeg">
                        </div>                        
                    </div>
                </div>
            </div>
        </section>
        <section class="page-section cta">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 mx-auto">
                        <div class="cta-inner text-center rounded">
                            <h2 class="section-heading mb-4"><span class="section-heading-upper">More info</span></h2>
                            <div class="text-md-left">
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="author"><strong>Author</strong></label><input class="form-control" type="text" value="<%= post.author %>" name="author" style="height: 30px;" readonly></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="schedule"><strong>Scheduled for</strong></label>
                                            <input class="form-control date" type="text" value="<%= post.schedule %>" name="schedule" style="height: 30px;" placeholder="Format dd-mm-yyyy (01-01-2020)">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="timestamp"><strong>Created on</strong><br></label><input class="form-control" type="text" value="<%= post.timestamp %>" name="timestamp" style="height: 30px;" readonly></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="tags"><strong>Tags</strong></label><input class="form-control" type="text" value="<%= post.tags %>" name="tags" style="height: 30px;"></div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="status"><strong>Status</strong><br></label>
                                            <select class="form-control form-control-sm custom-select custom-select-sm" style="width: 120px;margin: 0 20px 0 10px ;" name="status">
                                                <% for (let i = 0; i < statuses.length; i++) { %>
                                                    <% if (post.status == statuses[i]) { %>
                                                        <option value="<%=statuses[i]%>" selected=""><%=statuses[i]%></option>
                                                    <%} else {%>
                                                        <option value="<%=statuses[i]%>"><%=statuses[i]%></option>
                                                    <%}%>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <footer class="footer text-faded text-center py-5">
        <div class="container">
            <p class="m-0 small">Copyright&nbsp;Â©&nbsp;YSJournal 2020</p>
        </div>
    </footer>
    <script src="assets_2/js/jquery.min.js"></script>
    <script src="assets_2/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets_2/js/current-day.js"></script>
    <script type="text/javascript">
        $("#title").height( $("#title")[0].scrollHeight );
        $("#content").height( $("#content")[0].scrollHeight );
    </script>
</body>

</html>